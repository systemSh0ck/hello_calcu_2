<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity"
    android:padding="0dp"
    android:animateLayoutChanges="true">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="0dp"
        android:padding="0dp"
        android:stretchColumns="*">

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="0dp"
            android:minHeight="100dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text=""
                android:id="@+id/result_view"
                android:gravity="end"
                android:layout_gravity="bottom"
                android:layout_span="4"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="10dp"/>

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:minHeight="75dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text=""
                android:id="@+id/operations_view"
                android:gravity="end"
                android:layout_gravity="bottom"
                android:layout_span="4"
                android:ellipsize="start"
                android:singleLine="true"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="1"
                android:id="@+id/number1"
                android:layout_weight=".25"
                android:background="@drawable/roundbutton"
                />

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="2"
                android:id="@+id/number2"
                android:layout_weight=".25"
                android:background="@drawable/roundbutton"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="3"
                android:id="@+id/number3"
                android:layout_weight=".25"
                android:background="@drawable/roundbutton"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="+"
                android:id="@+id/operation_plus"
                android:layout_weight=".25"
                android:background="@drawable/roundbutton"
                android:backgroundTint="#E8550C"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="4"
                android:id="@+id/number4"
                android:layout_weight=".25"
                android:background="@drawable/roundbutton"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="5"
                android:id="@+id/number5"
                android:layout_weight=".25"
                android:background="@drawable/roundbutton"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="6"
                android:id="@+id/number6"
                android:layout_weight=".25"
                android:background="@drawable/roundbutton"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="-"
                android:id="@+id/operation_minus"
                android:layout_weight=".25"
                android:background="@drawable/roundbutton"
                android:backgroundTint="#E8550C"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="7"
                android:id="@+id/number7"
                android:layout_weight=".25"
                android:background="@drawable/roundbutton"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="8"
                android:id="@+id/number8"
                android:layout_weight=".25"
                android:background="@drawable/roundbutton"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="9"
                android:id="@+id/number9"
                android:layout_weight=".25"
                android:background="@drawable/roundbutton"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="*"
                android:id="@+id/operation_mult"
                android:layout_weight=".25"
                android:background="@drawable/roundbutton"
                android:backgroundTint="#E8550C"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="0"
                android:id="@+id/number0"
                android:layout_weight=".25"
                android:background="@drawable/roundbutton"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="x^2"
                android:id="@+id/operation_sqare"
                android:layout_weight=".25"
                android:background="@drawable/roundbutton"
                android:backgroundTint="#E8550C"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="SqRt"
                android:id="@+id/operation_sqrt"
                android:layout_weight=".25"
                android:background="@drawable/roundbutton"
                android:backgroundTint="#E8550C"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="/"
                android:id="@+id/operation_div"
                android:layout_weight=".25"
                android:background="@drawable/roundbutton"
                android:backgroundTint="#E8550C"/>

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="="
                android:id="@+id/operation_equals"
                android:layout_weight=".50"
                android:background="@drawable/roundbutton"
                android:backgroundTint="#E8550C"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="C"
                android:id="@+id/operation_clear"
                android:layout_weight=".50"
                android:background="@drawable/roundbutton"
                android:backgroundTint="#E8550C"/>
        </TableRow>

    </TableLayout>
